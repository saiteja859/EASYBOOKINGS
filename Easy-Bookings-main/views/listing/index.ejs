<%layout("/layouts/boilerplate")%>
<body>
    <h3 class="index-title">All Listings</h3>
    <div class="index-container">
        <% for (let listing of allListing) { %>
        <a href="/listing/<%= listing._id %>" class="listing-link">
            <div class="card listing-card" style="width: 20rem">
                <img src="<%= listing.image["url"] %>" class="card-img-top"
                alt="listing_image" style="height: 20rem" />
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b><br />
                        &#x20B9; <%= listing.price.toLocaleString("en-IN")
                        %>/Night
                    </p>
                </div>
            </div>
        </a>
        <% } %>
    </div>
</body>
